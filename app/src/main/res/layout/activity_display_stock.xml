<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Levels"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:id="@+id/stott"
        android:textAppearance="?android:textAppearanceLarge"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/stocktitle"
        android:layout_below="@id/stott">
        <TextView
            android:id="@+id/tvProductSold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Product"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvQuantitySold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stock Level"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvPriceSold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/stocktitle"/>

</RelativeLayout>